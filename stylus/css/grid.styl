global-reset()
html
    overflow-y scroll
    font-family Arial, "Helvetica Neue", Helvetica, sans-serif
img, video, audio, embed, object
    max-width 100%

total_cols = 24
col_width = 30px
gut_width = 30px
total_width = total_cols * (col_width + gut_width) - gut_width
center()
    width total_width
    margin auto
    clearfix()
col(n)
    width (col_width * n) + (gut_width * n) - gut_width
    margin-right gut_width
    float left
span(n)
    width ( (total_width) / (total_cols / n) )
    float left
suf(n)
    margin-right (col_width * n) + (gut_width * n) + gut_width
pre(n)
    margin-left (col_width * n) + (gut_width * n)
last()
    margin-right 0 !important
.last
    last()
mb()
    margin-bottom gut_width

